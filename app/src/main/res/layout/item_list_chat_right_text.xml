<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_time_receive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="2018-03-20 14:30:20"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    <RelativeLayout
        android:layout_marginLeft="40dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_toLeftOf="@+id/iv_myself_avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="hgggg"
                android:id="@+id/tv_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/adt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_fail"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_chat_fail_resend_selector" />

        <ProgressBar
            android:layout_centerVertical="true"
            android:id="@+id/pb_progress"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <ImageView
            android:id="@+id/iv_myself_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:visibility="visible"
            android:background="@mipmap/ic_default_avata_large" />
    </RelativeLayout>
</LinearLayout>